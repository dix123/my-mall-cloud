<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.mall.shortlink.mapper.LinkAccessStatsMapper">
    <insert id="updateStats" >
        INSERT INTO
            t_link_access_stats(fullShortUrl, uv, pv, uip, date, hour, weekday)
            values (#{linkAccessStats.fullShortUrl}, #{linkAccessStats.uv}, #{linkAccessStats.pv}, #{linkAccessStats.uip}
            , #{linkAccessStats.date}, #{linkAccessStats.hour}, #{linkAccessStats.weekday})
            ON DUPLICATE KEY UPDATE pv = pv + #{linkAccessStats.pv}, uv = uv + #{linkAccessStats.uv}, uip = uip + #{linkAccessStats.uip}

    </insert>

</mapper>