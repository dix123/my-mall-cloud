<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.mall.shortlink.mapper.ShortLinkMapper">

    <select id="listGroupShortLinkCount" resultType="com.my.mall.api.shortlink.dto.GroupShortLinkCountDTO">
        select t.gid, count(*)
            from t_link t
            where t.enable_status = 0 and t.del_flag = 0
                and t.gid in
            <foreach collection="gids" open="(" separator="," close=")" item="gid">
                #{gid}
            </foreach>
            group by t.gid
    </select>

    <select id="pageShortLink" resultType="com.my.mall.shortlink.entity.LinkDO">
        select
            t.*,
            COALESCE(s.today_pv, 0) as todayPv,
            COALESCE(s.today_uv, 0) as todayUv,
            COALESCE(s.today_uip, 0) as todayUip
        from t_link t
        left join t_link_stat_today s using full_short_url and s.date = CURDATE()
        where
            t.gid in
            <foreach collection="gid" open="(" separator="," close=")" item="item">
                #{item}
            </foreach>
        and t.enable_status = 0
        and t.del_flag = 0
        order by t.update_time
    </select>

</mapper>